% Exclusive filter
\pgfplotsset{
  discard if/.style 2 args={
      x filter/.append code={
          \readlist\mylist{#2}%
          \foreachitem\z\in\mylist[]{%
            \ifdim\thisrow{#1} pt=\z pt
              \def\pgfmathresult{inf}
            \fi
          }
        }
    },
}

% Inclusive filter
\pgfplotsset{
  discard if not/.style 2 args={
      x filter/.code={
          \edef\tempa{\thisrow{#1}}
          \edef\tempb{#2}
          \ifx\tempa\tempb
          \else
            \def\pgfmathresult{inf}
          \fi
        }
    }
}

